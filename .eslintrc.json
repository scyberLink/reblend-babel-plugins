{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn"
  },
  "overrides": [
    {
      "files": ["packages/creba-template/**/*.js"],
      "extends": ["reblend-app", "reblend-app/jest"]
    }
  ]
}
