{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    //"lib": ["ESNext"],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "moduleResolution": "node"
  },
  "exclude": ["**/test/**"]
}
